<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NomeCompletoFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_fullName"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_yourname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual seu nome completo?"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_fullName" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cpflLayout"
        android:layout_width="350dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_yourname"
        app:layout_constraintVertical_bias="0.369"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        tools:hintAnimationEnabled="true"
        tools:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cpffield"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="30"
            android:inputType="text"
            android:backgroundTint="@color/white"
            android:hint="Nome Completo" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_fullname_continue"
        android:layout_width="210dp"
        android:layout_height="66dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="@color/green_primary"
        android:text="Continuar"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>