<!--            android:textSize="17sp"-->
<!--            app:layout_constraintStart_toEndOf="@+id/txtDesc"-->
<!--            app:layout_constraintTop_toTopOf="@+id/txtDesc" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
