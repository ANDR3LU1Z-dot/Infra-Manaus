<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PhoneFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Qual o seu nÃºmero de celular?"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_phoneNumber" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phonelLayout"
        android:layout_width="350dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_phone"
        app:layout_constraintVertical_bias="0.369"
        app:startIconDrawable="@drawable/ic_phone"
        tools:hintAnimationEnabled="true"
        tools:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phonefield"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="30"
            android:inputType="phone"
            android:backgroundTint="@color/white"
            android:hint="Celular"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_phone_continue"
        android:layout_width="210dp"
        android:layout_height="66dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="@color/green_primary"
        android:text="Continuar"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>